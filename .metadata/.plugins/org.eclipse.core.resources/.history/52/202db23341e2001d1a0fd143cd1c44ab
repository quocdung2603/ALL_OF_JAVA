package quanlythegioididong;
import java.util.*;
abstract class Product {
	protected int masp;
	protected String tensp;
	protected double giagoc;
	abstract double Tinhgiaban();
	Scanner sc  = new Scanner(System.in);
	public Product() {
		// TODO Auto-generated constructor stub
	}

	public Product(int masp, String tensp , double giagoc) {
		super();
		this.masp = masp;
		this.tensp = tensp;
		this.giagoc = giagoc;
	}

	public int getMasp() {
		return masp;
	}

	public void setMasp(int masp) {
		this.masp = masp;
	}

	public String getTensp() {
		return tensp;
	}

	public void setTensp(String tensp) {
		this.tensp = tensp;
	} 
	
	public double getGiagoc() {
		return giagoc;
	}

	public void setGiagoc(double giagoc) {
		this.giagoc = giagoc;
	}

	public void Input()
	{
		System.out.print("Ma san pham: "); int a = sc.nextInt();
		sc.nextLine();
		System.out.print("Ten san pham: ") String b = sc.nextLine();
		System.out.print("Gia goc: "); double c = sc.nextDouble();
		setMasp(a);
		setTensp(b);
		setGiagoc(c);
	}
	
}
